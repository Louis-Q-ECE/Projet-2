#include <iostream>

int main() {
    int number;
    std::cout << "Entrez un nombre : ";
    std::cin >> number;
    
    if (number % 2 == 0) {
        std::cout << "Le nombre est pair." << std::endl;
    } else {
        std::cout << "Le nombre est impair." << std::endl;
    }
    
    return 0;
}
