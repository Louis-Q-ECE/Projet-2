#include <iostream>

int main() {
    int number;
    std::cout << "Entrez un nombre : ";
    std::cin >> number;
    
    if (number % 2 == 0) {
        std::cout << "Le nombre est pair." << std::endl;
    } else {
        std::cout << "Le nombre est impair." << std::endl;
    }
    
    return 0;
}




#include <iostream>

int main() {
    int number;
    std::cout << "Entrez un nombre : ";
    std::cin >> number;
    
    if (number % 2 == 0) {
        std::cout << "Le nombre est pair." << std::endl;
    } else {
        std::cout << "Le nombre est impair." << std::endl;
    }

    for (int i = 0; i < number; ++i) {
        std::cout << "Iteration " << i + 1 << std::endl;
    }

    for (int i = 0; i < number; ++i) {
        if (i % 2 == 0) {
            std::cout << "Nombre " << i << " est pair." << std::endl;
        } else {
            std::cout << "Nombre " << i << " est impair." << std::endl;
        }
    }

    int sum = 0;
    for (int i = 1; i <= number; ++i) {
        sum += i;
    }
    std::cout << "La somme des nombres de 1 Ã  " << number << " est : " << sum << std::endl;

    int factorial = 1;
    for (int i = 1; i <= number; ++i) {
        factorial *= i;
    }
    std::cout << "Le factoriel de " << number << " est : " << factorial << std::endl;
    
    return 0;
}

#include <iostream>

int main() {
    int number;
    std::cout << "Entrez un nombre : ";
    std::cin >> number;
    
    if (number % 2 == 0) {
        std::cout << "Le nombre est pair." << std::endl;
    } else {
        std::cout << "Le nombre est impair." << std::endl;
    }

    for (int i = 0; i < number; ++i) {
        std::cout << "Iteration " << i + 1 << std::endl;
    }

    for (int i = 0; i < number; ++i) {
        if (i % 2 == 0) {
            std::cout << "Nombre " << i << " est pair." << std::endl;
        } else {
            std::cout << "Nombre " << i << " est impair." << std::endl;
        }
    }

    int sum = 0;
    for (int i = 1; i <= number; ++i) {
        sum += i;
    }
    std::cout << "La somme des nombres de 1 Ã  " << number << " est : " << sum << std::endl;

    int factorial = 1;
    for (int i = 1; i <= number; ++i) {
        factorial *= i;
    }
    std::cout << "Le factoriel de " << number << " est : " << factorial << std::endl;

    for (int i = 0; i < number; ++i) {
        for (int j = 0; j < number; ++j) {
            std::cout << "* ";
        }
        std::cout << std::endl;
    }

    int fibonacci[number];
    fibonacci[0] = 0;
    fibonacci[1] = 1;
    for (int i = 2; i < number; ++i) {
        fibonacci[i] = fibonacci[i - 1] + fibonacci[i - 2];
    }
    std::cout << "Suite de Fibonacci pour " << number << " termes : ";
    for (int i = 0; i < number; ++i) {
        std::cout << fibonacci[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}


